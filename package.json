{
  "name": "steal-react-example",
  "description": "",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "http-server ./", 
    "//": "Pra usar o live-reload tem que usar esse comando em um terminal e em outro usar o comando start",
    "live-reload": "steal-tools live-reload --main src/index",
    "//": "Gerar uma nova vers√£o do build conforme for editando os arquivos",
    "watch": "steal-tools build --main src/index --watch",
    "build": "steal-tools build --main src/index"
  },
  "dependencies": {
    "http-server": "^0.11.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router-dom": "^4.3.1",
    "steal": "^1.0.10",
    "steal-jsx": "^0.0.2"
  },
  "devDependencies": {
    "steal-css": "^1.3.2",
    "steal-tools": "^1.11.9"
  },
  "steal": {
    "transpiler": "babel",
    "babelOptions": {
      "blacklist": []
    },
    "plugins": [
      "steal-jsx",
      "steal-css"
    ],
    "configDependencies": [
      "live-reload"
    ],
  }
}
